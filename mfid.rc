#!/bin/sh

# PROVIDE: mfid
# REQUIRE: root ldconfig devfs syslogd mail
# KEYWORD: nojail noyroot

. /etc/rc.subr

name=mfid
raid_alert_mailto=${mfid_alert_mailto:-"root@localhost"}
start_cmd="mfid_start"
stop_cmd="mfid_stop"

mfid_start()
{
	if [ -x "/usr/sbin/mfid" -a -e "/dev/mfi0" ]; then
	        echo "Starting mfid."
		/usr/sbin/mfid ${raid_alert_mailto}
	fi
}

mfid_stop()
{
	killall -9 mfid > /dev/null 2>&1
}

load_rc_config $name
run_rc_command "$1"
